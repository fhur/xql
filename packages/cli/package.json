{
    "name": "@synthql/cli",
    "type": "module",
    "version": "0.72.4",
    "main": "build/src/index.cjs",
    "module": "build/src/index.js",
    "types": "build/types/src/index.d.ts",
    "sideEffects": false,
    "repository": {
        "type": "git",
        "url": "git@github.com:synthql/SynthQL.git"
    },
    "files": [
        "build",
        "README.md"
    ],
    "license": "MIT",
    "scripts": {
        "link:pkg": "yarn link",
        "test": "vitest --globals",
        "typecheck": "tsc",
        "test:ci": "CI=1 vitest run --globals",
        "run-cli": "yarn build && node ./build/src/index.cjs",
        "checks": "yarn vitest --globals run && yarn build && yarn tsc",
        "build": "vite build --mode production",
        "publish:minor": "yarn publish --access public --no-git-tag-version",
        "format": "yarn prettier --config ../../prettier.config.js --write ./src/"
    },
    "dependencies": {
        "@synthql/introspect": "0.72.4",
        "@synthql/queries": "0.72.4",
        "pg": "^8.11.3",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@types/node": "^20.10.5",
        "@types/pg": "^8.10.9",
        "@types/yargs": "^17.0.32",
        "@vitest/coverage-v8": "^1.2.2",
        "@vitest/ui": "^1.3.1",
        "rollup-plugin-node-externals": "^7.1.1",
        "typescript": "^5.4.5",
        "vitest": "^1.1.0"
    },
    "bin": {
        "synthql": "build/src/index.cjs"
    }
}
